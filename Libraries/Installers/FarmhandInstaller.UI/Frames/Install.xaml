<frames:BaseFrame x:Class="Farmhand.Installers.Frames.Install"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:frames="clr-namespace:Farmhand.Installers.Frames"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <DockPanel Margin="0,50,0,0">
        <Label DockPanel.Dock="Top" x:Name="label" Content="Installing. . ." HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>
        <ProgressBar x:Name="InstallationProgress" Value="0" DockPanel.Dock="Top" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="500"/>
        <Label DockPanel.Dock="Top" x:Name="LabelMessage" Content="" HorizontalAlignment="Center" FontSize="13" />
    </DockPanel>
</frames:BaseFrame>

